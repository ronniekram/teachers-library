<div class="form-container">
<%= form_for @book do |f| %>

  <div class="field">
    <%= f.label :title, "Title: " %> <br>
    <%= f.text_field :title %> <br>
  </div>

  <div class="field">
    <%= f.label :author, "Author: " %> <br>
    <%= f.text_field :author %> <br>
  </div>

  <div class="field">
    <%= f.label :publisher, "Publisher: " %> <br>
    <%= f.text_field :publisher %> <br>
  </div>

  <div class="field">
    <%= f.label :pages, "Pages: " %> <br>
    <%= f.number_field :pages %> <br>
  </div>

  <%= f.label :subjects, "Subject(s): " %> <br>
  <div class="checkbox-container">
    <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :sub_name, class: 'checkbox' %>
  </div> 
  <br>

<%= f.submit %>
<% end %>
</div>